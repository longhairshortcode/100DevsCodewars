//Task//Task
//Given a random non-negative number, you have to return the digits of this number within an array in reverse order.
//Example(Input => Output):
//35231 => [1,3,2,5,3]
//0 => [0]

//Answer 1
function digitize(n) {
// turn a number into a string
   let makeStr = n.toString()
//split the string to turn into an array of substrings
   let arrOfSub = makeStr.split('')
//reverse the array
   let revArr = arrOfSub.reverse()
//make the substrings into numbers 
    let arrOfNums = revArr.map(Number)
//return arrOfNums
  }

//Answer 2
function digitize(n) {
let makeStr = n.toString().split('').reverse().map(Number)
  return makeStr;
}
