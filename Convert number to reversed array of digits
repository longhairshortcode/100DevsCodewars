//Task:
//Given a random non-negative number, you have to return the digits of this number within an array in reverse order.
//Example(Input => Output):
//35231 => [1,3,2,5,3]

//Answer
function digitize(n) {
  let numToStrArr = n.toString().split(''); // makes an array of numerical digits eg ['1', '2', '3']
  let revArr = numToStrArr.reverse(); // ['3', '2', '1']
  return revArr.map(Number); // Convert each character back to a number
}
